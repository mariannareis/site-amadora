<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
  <head>
    <link rel="shortcut icon" href="/favicon.ico" />
    <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
    <title>Am(a)dora - fall in love! </title>
    <%= stylesheet_link_tag :all %>
    <%= csrf_meta_tag %>
    <%#= javascript_include_tag 'prototype' %>
    <%= javascript_include_tag 'jquery/jquery-1.5.min' %>
    <%#= javascript_include_tag :all, :cache => true %>

<script src='http://www.google.com/jsapi'/>
<script>
google.load(&quot;jquery&quot;, &quot;1.3.2&quot;);
</script>
<script type='text/javascript'>
jQuery(function()
{
  jQuery("#menusisi a").stop().animate({"marginLeft":"-50px"},1000);
  jQuery("#menusisi a, li").hover
  (
    function ()
    {
      jQuery("a",jQuery(this)).stop().animate({"marginLeft":"-2px"},200);
    },
    function ()
    {
      jQuery("a",jQuery(this)).stop().animate({"marginLeft":"-50px"},200);
    }
  );
});

</script>


  </head>

  <body>

    <div id="container">
      <div id="top"> <a href="/">  <img src="../images/title.png" border="0" alt="blog pessoal" /> </a>
        <div id="subtitle" > </div>
      </div>

      <div id="sidebar">
        <center>
          <a href="http://mariounaum.tumblr.com" target="_blank" >    <img src="../images/sidebar-blog1.png" onmouseover="this.src='../images/sidebar-blog1-s.png'" onmouseout="this.src='../images/sidebar-blog1.png'" border="0" alt="blog pessoal" /> </a>
          <div id="space_"> <a class="blogbutton2" target="_blank" href="http://tecnounao.wordpress.com">   <img src="../images/sidebar-blog2.png" onmouseover="this.src='../images/sidebar-blog2-s.png'" onmouseout="this.src='../images/sidebar-blog2.png'" border="0" alt="blog tecnounao" />  </a></div>
           <div id="space_"> <a class="contactbutton" href="/contact">                                       <img src="../images/sidebar-contact.png" onmouseover="this.src='../images/sidebar-contact-s.png'" onmouseout="this.src='../images/sidebar-contact.png'" border="0" alt="contact" /> </a> </div>
           <div id="space_"> <a class="blogrollbutton" href="/blogroll">                                     <img src="../images/sidebar-blogroll.png" onmouseover="this.src='../images/sidebar-blogroll-s.png'" onmouseout="this.src='../images/sidebar-blogroll.png'" border="0" alt="blogroll" />  </a> </div>
        </center>
      </div>

      <div id="content">
        <%= yield %>

        <% if page_title.to_s != "Am(a)dora" %>
         <h2 class="pages_title"> <%= page_title %> </h2>
        <% else %>
        <h2 class="main_title">  <%= "Menu" %> </h2>
        <% end %>
      </div>

      <div id="bottom">
        <div align="right">
            <a href="http://validator.w3.org/check?uri=referer"><img
            src="http://www.w3.org/Icons/valid-xhtml10"
